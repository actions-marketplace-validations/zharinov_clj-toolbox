{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^action\\.yml$"],
      "matchStrings": [
        "[\"']?(?<currentValue>[^\"\\s]*)[\"']?\\s*#\\s*renovate:\\s*(?<depName>[-\\w\\d]+\\/[-\\w\\d]+)"
      ],
      "extractVersion": "^(?:vm-|v)(?<version>\\d+\\.\\d+\\.\\d+)$",
      "datasourceTemplate": "github-releases"
    }
  ]
}
