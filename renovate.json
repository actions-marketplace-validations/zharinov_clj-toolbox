{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^action\\.yml$"],
      "matchStrings": [
        "[\"']?(?<currentValue>[^\"'\\s]*)[\"']?\\s*#\\s*(?<datasource>[-a-z]+):\\s*(?<depName>[-\\w\\d]+\\/[-\\w\\d]+)"
      ]
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["github-releases", "github-tags"],
      "extractVersion": "^(?:vm-|v)(?<version>\\d+(?:\\.\\d+)*)$",
      "versioning": "maven"
    }
  ]
}
