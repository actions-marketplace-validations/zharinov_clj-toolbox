{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^action\\.yml$"],
      "matchStrings": [
        "[\"']?(?<currentValue>[^\"'\\s]*)[\"']?\\s*#\\s*(?<datasource>[-a-z]+):\\s*(?<packageName>[-\\w\\d]+\\/[-\\w\\d]+)\\s+-\\s+(?<depName>[\\w ]+)\\s*$"
      ]
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["clojure/brew-install"],
      "versioning": "maven"
    },
    {
      "matchPackageNames": ["graalvm/graalvm-ce-builds"],
      "extractVersion": "^vm-(?<version>\\d+(?:\\.\\d+)*)$"
    }
  ]
}
