{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github\\/workflows\\/.*\\.yml$"],
      "matchStrings": ["[\"']?(?<currentValue>[^\"\\s]*)[\"']?\\s*#\\s*renovate:\\s*graalvm/graalvm-ce-builds"],
      "depNameTemplate": "graalvm/graalvm-ce-builds",
      "extractVersion": "^vm-(?<version>\\d+\\.\\d+\\.\\d+)$",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": ["^\\.github\\/workflows\\/.*\\.yml$"],
      "matchStrings": ["[\"']?(?<currentValue>[^\"\\s]*)[\"']?\\s*#\\s*renovate:\\s*(?<depName>[-\\w\\d]+\\/[-\\w\\d]+)"],
      "datasourceTemplate": "github-releases"
    }
  ]
}
